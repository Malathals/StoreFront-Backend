{
  "compilerOptions": {
    "outDir": "./build",  // Output directory for compiled JS files
    "rootDir": "./src",   // Source directory for all your TypeScript files
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"  // Include all .ts files in the src directory
  ],
  "exclude": [
    "node_modules"  // Exclude the node_modules folder
  ]
}
